    <include file="$(find-pkg-share gazebo_ros)/launch/gazebo.launch.py">
        <!-- <arg name="world" value="$(find-pkg-share diffdrive_bot)/worlds/maze.world"/> -->
    </include>



    <node pkg="gazebo_ros" exec="spawn_entity.py" args= "-topic robot_description -entity mirabot" />

    <!-- <node pkg="controller_manager" exec="spawner" args="diffbot_base_controller" />

    <node pkg="controller_manager" exec="spawner" args="joint_state_broadcaster" /> -->

